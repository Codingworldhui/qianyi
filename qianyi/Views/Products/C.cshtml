
@{
    ViewBag.Title = "C";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>产品介绍</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f3f3f3;
            margin: 0;
            padding: 0;
            display: flex;
        
            flex-wrap: wrap;
        }

        .product-box {
            width: 40%;
            min-height: 300px;
            background: #f7f7f7;
            margin: 1rem;
            padding: 20px;
            border-radius: 10px;
            position: relative;
        }

            .product-box:nth-child(2n+1) {
                background: #e6e6e6;
            }

            .product-box:nth-child(3n+2) {
                background: #dcdcdc;
            }

            .product-box:nth-child(4n+3) {
                background: #cfcfcf;
            }

        .product-title {
            font-size: 20px;
            font-weight: bold;
        }

        .product-description {
            font-size: 18px;
            margin-top: 10px;
        }
        .navbar {
            width:100%;
            background-color: #333; /* 设置背景颜色 */
            color: white; /* 设置文字颜色 */
            padding: 10px 0; /* 设置上下内边距和左右内边距 */
        }

            .navbar ul {
                list-style: none; /* 移除列表样式 */
                padding: 0;
            }

                .navbar ul li {
                    display: inline; /* 横向显示列表项 */
                    margin-right: 20px; /* 项之间的右边距 */
                }

            .navbar a {
                text-decoration: none; /* 移除链接下划线 */
                color: white; /* 设置链接文字颜色 */
            }

                .navbar a:hover {
                    text-decoration: underline; /* 鼠标悬停时显示下划线 */
                }
    </style>
</head>
<body>
    <div class="navbar">
        <ul>
            <li>@Html.ActionLink("Web Introduction", "Index", "Default")</li>
            <li><a href="https://localhost:44334/Products">Products</a></li>
            @Html.ActionLink("Products Details", "C", "Products")
        </ul>
    </div>
